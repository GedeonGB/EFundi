<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_margin="5dp"
    android:id="@+id/cardItem"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    app:cardCornerRadius="6dp"
    android:clickable="true"
    android:elevation="4dp"
    android:layout_height="300dp"
    tools:targetApi="lollipop">

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_below="@+id/card_Wedding"
        android:orientation="horizontal"
        android:id="@+id/linGradDate"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:id="@+id/card_Prom"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="0dp"
            android:elevation="5dp"
            android:clickable="true"
            android:layout_height="match_parent"
            android:focusable="true"
            tools:targetApi="lollipop">



            <ImageView
                android:src="@drawable/tyre2"
                android:scaleType="centerCrop"
                android:id="@+id/ItemImage"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <!--<TextView-->
            <!--android:text=""-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="@drawable/background_trans"-->
            <!--android:fontFamily="sans-serif-thin"-->
            <!--android:textSize="24sp"-->
            <!--android:id="@+id/ItemName1"-->
            <!--android:textStyle="bold"-->
            <!--android:gravity="center_vertical"-->
            <!--android:padding="8dp"-->
            <!--android:textColor="#fff"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->




            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ItemImage"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-light"
                android:text="Turbo Tyre"
                android:textColor="#111"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/itemShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemName"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
                android:fontFamily="sans-serif-light"
                android:text="new tyre shop"
                android:textColor="#111"
                android:textSize="13sp" />

            <Button
                android:text="view more "
                android:layout_below="@+id/itemShop"
                android:textAllCaps="false"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-light"
                android:id="@+id/btnViewMore"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/cerclebackgroundpink"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />


            <ProgressBar
                android:layout_width="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                android:id="@+id/rel_item_progress"
                android:visibility="gone"
                android:layout_toEndOf="@+id/btnViewMore"
                android:layout_below="@+id/itemShop"
                android:layout_height="30dp">




            </ProgressBar>

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>


