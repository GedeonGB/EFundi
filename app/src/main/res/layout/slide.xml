<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:background="#00ffffff"
    android:id="@+id/slideRelLayout"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:elevation="4dp"
    android:focusable="true"
    android:layout_width="270dp"
    android:layout_height="380dp"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="16dp"
    android:padding="8dp"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_centerHorizontal="true"
            android:text="In need of Help"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:textColor="#111"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/txtTitle"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:text="e-fundi provides in a quick way help to all drive with only one click"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textAlignment="center"
            android:layout_below="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:id="@+id/txttitle2"
            android:textColor="#111"
            android:textStyle="normal"
            android:textSize="15sp"
            android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/slideimg"
        android:layout_below="@+id/txttitle2"
        android:src="@drawable/imgphone2"
        android:layout_centerHorizontal="true"
        android:layout_width="140dp"
        android:layout_marginTop="35dp"
        android:layout_height="160dp" />

    <Button
        android:text="Next"
        android:textColor="#fff"
        android:id="@+id/btnNext"
        android:layout_marginTop="45dp"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/slideimg"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="25dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>
